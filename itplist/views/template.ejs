<html>
	<head>
    <link rel="stylesheet" type="text/css" href="960_12_col.css" />
    <link rel="stylesheet" href="styles.css">
    <script type="text/javascript">
				// document.getElementsbyClass
				// .target!!
      var funbarter ;
      var fungig ;
      var funjob ;

      var bartertxt ;
      var gigtxt ;
      var jobtxt ;

      function init() {

        bartertxt = document.getElementById("bartertxt");
        gigtxt = document.getElementById("gigtxt");
        jobtxt = document.getElementById("jobtxt");

      	bartertxt.addEventListener('click', togglebarter);
        gigtxt.addEventListener('click', togglegig);
      	jobtxt.addEventListener('click', togglejob);
      }

      function togglebarter() {
        funbarter = document.getElementById("barterfun");

          if (funbarter.style.visibility === 'hidden') {
              funbarter.style.visibility = 'visible';
          } else {
              funbarter.style.visibility = 'hidden';
          }
        }

        function togglegig() {
          fungig = document.getElementById("gigfun");

            if (fungig.style.visibility === 'hidden') {
                fungig.style.visibility = 'visible';
            } else {
                fungig.style.visibility = 'hidden';
            }
          }

          function togglejob() {
            funjob = document.getElementById("jobfun");

              if (funjob.style.visibility === 'hidden') {
                  funjob.style.visibility = 'visible';
              } else {
                  funjob.style.visibility = 'hidden';
              }
            }

      window.addEventListener('load', init);

    </script>

		<title>ITP Times</title>
	</head>
	<body>

